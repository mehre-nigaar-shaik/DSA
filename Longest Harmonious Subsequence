class Solution {
public:
    int findLHS(vector<int>& nums) {
        
        unordered_map<int,int> freq;
        
        // Count frequencies
        for(int num : nums)
            freq[num]++;
        
        int ans = 0;
        
        // Check harmonious pairs
        for(auto &p : freq) {
            int x = p.first;
            
            if(freq.count(x + 1)) {
                ans = max(ans, freq[x] + freq[x + 1]);
            }
        }
        
        return ans;
    }
};
