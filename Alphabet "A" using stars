//alphabet "A" using stars
/* 
   ***   
  *   *  
 *     * 
 ******* 
 *     * 
 *     * 
 *     * 
*/

#include <iostream>
using namespace std;

int main() {
    int n = 7;  // Height of 'A'

    for(int i = 0; i < n; i++) {
        for(int j = 0; j <= n; j++) {
            if ((j == n/2 - i) || (j == n/2 + i))

                cout << "*";
            else if (i == n/2 && j > n/2 - i && j < n/2 + i)

                cout << "*";
            else if (i > n/2 && (j == 0 || j == n))

                cout << "*";

            else
                cout << " ";
        }
        cout << endl;
    }

    return 0;
}
