class Solution {
public:
    int maxProfit(vector<int>& prices) {
        int n = prices.size();
        int min_Value = prices[0];
        int max_Profit = 0;

        for(int i = 0; i < n; i++){
            min_Value = min(min_Value, prices[i]);
            int localProfit = prices[i] - min_Value;
            max_Profit = max(max_Profit, localProfit);
        }
        return max_Profit;
    }
};
