#include <iostream>
using namespace std;

// Function declarations
void add(int &a, int &b, int *result);
void subtract(int &a, int &b, int *result);
void multiply(int &a, int &b, int *result);
void divide(int &a, int &b, int *result);
void modulo(int &a, int &b, int *result);
void brs(int &a, int &b, int *result);   // right shift
void lrs(int &a, int &b, int *result);   // left shift
void bOR(int &a, int &b, int *result);
void bAND(int &a, int &b, int *result);

int main() {
    int a, b, choice, result;

    cout << "Enter first number: ";
    cin >> a;

    cout << "Enter second number: ";
    cin >> b;

    cout << "\n--- Calculator Menu ---\n";
    cout << "1. Addition\n";
    cout << "2. Subtraction\n";
    cout << "3. Multiplication\n";
    cout << "4. Division\n";
    cout << "5. Modulo\n";
    cout << "6. Bitwise Right Shift\n";
    cout << "7. Bitwise Left Shift\n";
    cout << "8. Bitwise OR\n";
    cout << "9. Bitwise AND\n";
    cout << "Enter your choice: ";
    cin >> choice;

    if (choice == 1) {
        add(a, b, &result);
        cout << "Addition: " << result << endl;
    }
    else if (choice == 2) {
        subtract(a, b, &result);
        cout << "Subtraction: " << result << endl;
    }
    else if (choice == 3) {
        multiply(a, b, &result);
        cout << "Multiplication: " << result << endl;
    }
    else if (choice == 4) {
        if (b == 0)
            cout << "Division not possible (divide by zero)" << endl;
        else {
            divide(a, b, &result);
            cout << "Division: " << result << endl;
        }
    }
    else if (choice == 5) {
        if (b == 0)
            cout << "Modulo not possible (divide by zero)" << endl;
        else {
            modulo(a, b, &result);
            cout << "Modulo: " << result << endl;
        }
    }
    else if (choice == 6) {
        brs(a, b, &result);
        cout << "Bitwise Right Shift: " << result << endl;
    }
    else if (choice == 7) {
        lrs(a, b, &result);
        cout << "Bitwise Left Shift: " << result << endl;
    }
    else if (choice == 8) {
        bOR(a, b, &result);
        cout << "Bitwise OR: " << result << endl;
    }
    else if (choice == 9) {
        bAND(a, b, &result);
        cout << "Bitwise AND: " << result << endl;
    }
    else {
        cout << "Invalid choice" << endl;
    }

    return 0;
}

// Function definitions
void add(int &a, int &b, int *result) {
    *result = a + b;
}

void subtract(int &a, int &b, int *result) {
    *result = a - b;
}

void multiply(int &a, int &b, int *result) {
    *result = a * b;
}

void divide(int &a, int &b, int *result) {
    *result = a / b;
}

void modulo(int &a, int &b, int *result) {
    *result = a % b;
}

void brs(int &a, int &b, int *result) {
    *result = a >> b;
}

void lrs(int &a, int &b, int *result) {
    *result = a << b;
}

void bOR(int &a, int &b, int *result) {
    *result = a | b;
}

void bAND(int &a, int &b, int *result) {
    *result = a & b;
}
