#include <bits/stdc++.h>
using namespace std;

class Solution{
    public:
    void reverseArray(vector <int> &arr){
        int size = arr.size();
    for(int i = 0; i < size/2; i++){
        arr[i] = arr[i] + arr[size-i-1];
        arr[size-i-1] = arr[i] - arr[size-i-1];
        arr[i] = arr[i] - arr[size-i-1];
    }
    
    }
};

int main(){
    int size;
    cout << "enter the size : " ;
    cin >> size;

    vector<int> arr(size);
    cout << "Enter the elements: ";
    for(int i = 0; i < size; i++){
        cin >> arr[i];
    }
    Solution obj;
    obj.reverseArray(arr);

    cout << "Reversed elements: ";
    for(int i = 0;i < size; i++){
        cout << arr[i] <<" ";
    }
    return 0;

}
