//stair case pattern
/* 
* *
* *
* * * *
* * * *
* * * * * *
* * * * * *
*/

#include <iostream>
using namespace std;

int main() {
    int n = 6; // total rows

    for(int i = 1; i <= n; i++) {
        int stars = ((i + 1) / 2) * 2;

        for(int j = 1; j <= stars; j++) {
            cout << "* ";
        }

        cout << endl;
    }

    return 0;
}

