//inverted full pyramid(*)
/* 
*********
 *******
  *****
   ***
    *   */

#include <iostream>
using namespace std;

int main() {
    int N = 5;
    for(int i = N; i >= 1; i--) {
        for(int j = 1; j <= N - i; j++) {
            cout << "  ";
        }
        for(int j = 1; j <= 2*i - 1; j++) {
            cout << "*";
        }

        cout << endl;
    }

    return 0;
}
