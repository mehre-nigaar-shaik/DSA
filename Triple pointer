//triple pointer programme
#include <iostream>
using namespace std;

int main(){
   int *ptr1 = new int[3];
   ptr1[0] = 10;
   ptr1[1] = 20;
   ptr1[2] = 30;
    int **ptr2 = &ptr1;
    int ***ptr3 = &ptr2;

    cout << "first element: "  << (***ptr3) <<endl; 
    cout << "All Elements: " ;
    for(int i = 0; i < 3; i++){
      cout << (*(*ptr3))[i] << endl;
    }
    return 0;
} 
