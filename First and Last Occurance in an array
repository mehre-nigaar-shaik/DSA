#include <iostream>
#include <vector>
using namespace std;

class Solution {
  public:
    int firstOcc(int x, vector<int> &arr) {

        int n = arr.size();
        int first = 0;
        int last = n - 1;
        int ans = -1;

        while(first <= last) {

            int mid = (first + last) / 2;

            if(arr[mid] == x) {
                ans = mid;
                last = mid - 1;   // move left
            }
            else if(arr[mid] > x) {
                last = mid - 1;
            }
            else {
                first = mid + 1;
            }
        }
        return ans;
    }

    int lastOcc(int x, vector<int> &arr) {

        int n = arr.size();
        int first = 0;
        int last = n - 1;
        int ans = -1;

        while(first <= last) {

            int mid = (first + last) / 2;

            if(arr[mid] == x) {
                ans = mid;
                first = mid + 1;   // move right
            }
            else if(arr[mid] < x) {
                first = mid + 1;
            }
            else {
                last = mid - 1;
            }
        }
        return ans;
    }

    vector<int> firstAndLast(int x, vector<int> &arr) {

        int f = firstOcc(x, arr);

        if(f == -1)
            return {-1};

        int l = lastOcc(x, arr);

        return {f, l};
    }
};

int main() {

    int n, x;
    cout << "Enter size of array: ";
    cin >> n;

    vector<int> arr(n);

    cout << "Enter sorted array elements:\n";
    for(int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    cout << "Enter element to search: ";
    cin >> x;

    Solution obj;
    vector<int> result = obj.firstAndLast(x, arr);

    cout << "Output: ";
    for(int i : result) {
        cout << i << " ";
    }

    cout << endl;

    return 0;
}
