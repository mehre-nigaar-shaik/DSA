/* Take 12 items (integers, characters, or strings, etc.) as input and store them in a one-dimensional array. Then create a two-dimensional array (of size 3x4) and transfer the 12 elements from the one-dimensional array into the two-dimensional array. Finally, print the two-dimensional array. */
#include <iostream>
using namespace std;

int main(){
    //Taking input of 1d array and 2d array
    int arr1D[12];
    int arr2D[3][4];
//sending 12 elements into 1d array
    cout<< "Enter 12 elements: " << endl;
    for(int i = 0; i < 12; i++){
        cin >> arr1D[i];
    }

    //send 1d elements to 2d array
    int index = 0;
    for(int i = 0; i < 3; i++){
        for(int j = 0; j <4 ; j++){
            arr2D[i][j] = arr1D[index];
            index++;
        }
    }
    cout << "Print 2D array: " <<endl;
    for(int i = 0; i<3;i++){
        for(int j=0; j<4; j++){
            cout << arr2D[i][j] << " ";
        }
        cout << endl;
    }
    return 0;
}
